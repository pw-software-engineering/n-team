@model Hotel.Models.HotelInfo
@{
    ViewData["Title"] = "Your profile";
    string bg_img = string.IsNullOrWhiteSpace(Model.HotelPreviewPicture) ? "img/Atlantis-bg.png" : $"data:image/png;base64,{Model.HotelPreviewPicture}";
}


<div>
    <div class="img d-block rounded" style="
        width: 100%;
        height: 300px;
        background-image: url(@bg_img)">
        <div class="d-inline-flex flex-column rounded m-3 p-3" style="background-color: rgba(255, 255, 255, 0.35)">
            <h2 class="heading-section">
                @Html.Raw(string.IsNullOrWhiteSpace(Model.HotelName) ? "(no-name)" : Model.HotelName)
            </h2>
            <div>
                @Html.Raw(string.IsNullOrWhiteSpace(Model.City) ? "(no-city)" : Model.City),
                @Html.Raw(string.IsNullOrWhiteSpace(Model.Country) ? "(no-country)" : Model.Country)
            </div>
        </div>
    </div>

    <div>
        <small>@Model.HotelDesc</small>
    </div>
</div>
<hr />

<div>
    <h2 class="heading-section">Photos</h2>
    @if (Model.HotelPictures is null || !Model.HotelPictures.Any())
                {
        @:<p class="text-center">Your hotel has no photos. Add some!</p>
    }
    else
    {
        <div class="row">
            @foreach (string pic in Model.HotelPictures)
            {
                <div class="col-sm-3">
                    <img class="img-thumbnail" src="data:image/png;base64,@Html.Raw(pic)">
                </div>
            }
        </div>
    }
</div>
<hr />

<div>
    <a class="btn btn-primary" asp-controller="profile" asp-action="edit">Edit profile</a>
</div>
