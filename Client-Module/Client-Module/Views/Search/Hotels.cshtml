<div class="text-center">
    <h1 class="display-4">Search hotels</h1>
</div>
<hr class="mt-1 mb-3" />
<div class="form-row">
    <div class="col-md-4 my-1">
        <input type="text" class="form-control" placeholder="Hotel name">
    </div>
    <div class="col-md-3 my-1">
        <input type="text" class="form-control" placeholder="Country">
    </div>
    <div class="col-md-3 my-1">
        <input type="text" class="form-control" placeholder="City">
    </div>
    <div class="col-md-2 my-1">
        <button type="button" class="btn btn-success w-100">Apply</button>
    </div>
</div>
<div class="d-flex flex-row mt-2">
    <div class="flex-grow-0 mx-auto form-inline">
        @*flex-wrap: nowrap set in order to not wrap divs inside input-group*@
        <div class="input-group" style="flex-wrap: nowrap">
            <div class="input-group-prepend">
                <button class="d-flex flex-row btn btn-outline-secondary bg-light text-secondary" type="button" style="width: 115px; align-items: center">
                    <i class="fas fa-caret-left mx-1 flex-grow-0"></i>
                    <span class="flex-grow-0 mx-auto">Previous</span>
                </button>
            </div>
            <input type="text" class="form-control py-0 px-2 border-secondary border-right-0 border-left-0" style="width: 50px; text-align: center" />
            <div class="input-group-append">
                <button class="d-flex flex-row btn btn-outline-secondary bg-light text-secondary" type="button" style="width: 115px; align-items: center">
                    <span class="flex-grow-0 mx-auto">Next</span>
                    <i class="fas fa-caret-right mx-1 flex-grow-0"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<hr class="mt-3 mb-3" />
<div class="card w-100 border-0" style="background-color: lightgray">
    <ul class="list-group">
        <li class="list-group-item rounded m-1 border-dark bg-light">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 order-md-12">
                        <div class="d-flex flex-row" style="flex-wrap: wrap">
                            <p class="flex-grow-1 m-0"><b>Hotel:</b><i class="mx-3">Example hotel name</i></p>
                            <small class="flex-grow-0 text-secondary">(Hotel ID: 42)</small>
                        </div>
                        <hr class="my-1 border-dark" />
                        <b>Location:</b>
                        <ul>
                            <li><b>Country:  </b><span>[Country name]</span></li>
                            <li><b>City:     </b><span>[city name]</span></li>
                        </ul>
                        <button class="w-100 my-2 btn btn-info">Show offers<i class="ml-2 fas fa-chevron-right"></i></button>
                    </div>
                    <div class="col-md-6 order-md-0">
                        <div class="d-block rounded" style="width: 100%; height: 250px; background-color: red"></div>
                    </div>
                </div>
            </div>
        </li>

        <li class="list-group-item rounded m-1 border-dark bg-light">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 order-md-12">
                        <div class="d-flex flex-row" style="flex-wrap: wrap">
                            <p class="flex-grow-1 m-0"><b>Hotel:</b><i class="mx-3">Example hotel name</i></p>
                            <small class="flex-grow-0 text-secondary">(Hotel ID: 42)</small>
                        </div>
                        <hr class="my-1 border-dark" />
                        <b>Location:</b>
                        <ul>
                            <li><b>Country:  </b><span>[Country name]</span></li>
                            <li><b>City:     </b><span>[city name]</span></li>
                        </ul>
                        <button class="w-100 my-2 btn btn-info">Show offers<i class="ml-2 fas fa-chevron-right"></i></button>
                    </div>
                    <div class="col-md-6 order-md-0">
                        <div class="d-block rounded" style="width: 100%; height: 250px; background-color: red"></div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>