@using Client_Module.Models;
@model LogInViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Log in - MINI Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
</head>
<body class="h-100">
    <div class="d-flex h-100 flex-column">
        <div class="flex-grow-1"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="bg-light shadow-border col-md-7 col-lg-5">
                    <div class="p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100 text-align-center">
                                <h3 class="m-0 display-4 text-warning"><i>MINI Hotel</i></h3>
                                <p class="m-0 text-secondary">Log into your account</p>
                            </div>
                        </div>
                        <hr />
                        <form asp-controller="Client" asp-action="LogIn">
                            @{
                                if (Model.ServerLogInError != null)
                                {
                                    <p class="text-danger text-center">@Model.ServerLogInError</p>
                                }
                            }
                            <div class="form-group mt-3">
                                <label class="m-0 text-muted" for="login">Login</label>
                                <input name="login" type="text" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label class="m-0 text-muted" for="password">Password</label>
                                <span toggle="#password-input" id="password-toggle-btn" class="fa fa-fw fa-eye text-muted"></span>
                                <input name="password" id="password-input" type="password" class="form-control" required>
                            </div>
                            <hr class="mb-3" />
                            <div class="form-group m-0">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3" asp-controller="profile" asp-action="index">Sign In</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-grow-1"></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        (function ($) {

            "use strict";

            $("#password-toggle-btn").click(function () {

                $(this).toggleClass("fa-eye fa-eye-slash");
                var input = $($(this).attr("toggle"));
                if (input.attr("type") == "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });

        })(jQuery);
    </script>

</body>
</html>