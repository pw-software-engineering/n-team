@{
    ViewData["Title"] = "Reservations";
}

<div class="text-center">
    <h1 class="display-4">Your reservations</h1>
</div>
<hr class="mt-1 mb-3" />
<ul class="pagination justify-content-center my-3">
    <li class="page-item">
        <button class="page-link" href="" aria-label="Previous">
            <i class="fas fa-chevron-left text-dark"></i>
        </button>
    </li>
    <li class="page-item">
        <input class="page-link text-dark text-center font-weight-bold p-2" style="width: 60px" type="number" min="1" value="1" />
    </li>
    <li class="page-item">
        <button class="page-link" href="" aria-label="Next">
            <i class="fas fa-chevron-right text-dark"></i>
        </button>
    </li>
</ul>
<hr class="my-3" />
<div class="card w-100 border-0 mt-3 bg-website">
    <ul class="list-group bg-website reservation-list">
        <li class="list-group-item rounded-0 m-1 mb-3 bg-light reservation-list-entry">
            <div class="d-flex flex-row-reverse align-items-center flex-wrap">
                <button class="btn btn-danger ml-auto"><span style="font-weight: 500">Cancel reservation</span></button>
                <p class="m-0 mr-auto">
                    <span style="font-size: 22px">
                        <span style="font-weight: 600">Hotel:</span><i class="mx-3">Example hotel name</i>
                    </span>
                    <small>(Poland, Warsaw)</small>
                </p>
            </div>
            <hr class="my-2 border-secondary" />

            <div class="d-flex flex-row" style="flex-wrap: wrap; justify-content: center">
                <div class="flex-grow-0">
                    <small class="d-block text-secondary my-1">(Offer ID: 42)</small>
                    <div class="d-block rounded mx-auto" style="width: 230px; height: 180px; background-color: red"></div>
                </div>
                <div class="flex-grow-1 ml-2 d-flex flex-column">
                    <div class="flex-grow-0">
                        <p class="m-0 p-1 text-center" style="font-size: 18px">[Placeholder offer title]</p>
                        <hr class="my-1" />
                    </div>
                    <div class="flex-grow-1">
                        <div class="d-flex flex-row pl-2 mb-2 align-items-center">
                            <span class="mr-3" style="font-size: 18px; font-weight: 600">Reservation status:</span>
                            <span class="text-success" style="font-size: 18px; font-weight: 600">Pending</span>
                        </div>
                        <div class="d-flex flex-row pl-3 align-items-center">
                            <i class="flex-grow-0 far fa-calendar-minus mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Reservation period:</span><span class="mx-3">22.12.2020 &mdash; 14.02.2021</span></p>
                        </div>
                        <div class="d-flex flex-row pl-3 align-items-center">
                            <i class="flex-grow-0 fas fa-user-tie mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Number of adults:</span><span class="mx-3">2</span></p>
                        </div>
                        <div class="d-flex flex-row pl-3 mb-3 align-items-center">
                            <i class="flex-grow-0 fas fa-child mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Number of children:</span><span class="mx-3">1</span></p>
                        </div>
                        <hr class="my-2" />
                        <div class="d-flex flex-row flex-wrap pl-2" style="align-items: center">
                            <span class="flex-grow-0 mr-4" style="font-size: 18px; font-weight: 600">Your reservation review:</span>
                            <button class="btn btn-sm btn-warning mr-4" data-toggle="modal" data-target="#reviewModal">Edit<i class="far fa-edit ml-2"></i></button>
                            <button class="btn btn-sm btn-danger">Delete<i class="far fa-trash-alt ml-2"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </li>





        <li class="list-group-item rounded-0 m-1 mb-3 bg-light reservation-list-entry">
            <div class="d-flex flex-row-reverse align-items-center flex-wrap">
                <button class="btn btn-danger ml-auto"><span style="font-weight: 500">Cancel reservation</span></button>
                <p class="m-0 mr-auto">
                    <span style="font-size: 22px">
                        <span style="font-weight: 600">Hotel:</span><i class="mx-3">Example hotel name</i>
                    </span>
                    <small>(Poland, Warsaw)</small>
                </p>
            </div>
            <hr class="my-2 border-secondary" />

            <div class="d-flex flex-row" style="flex-wrap: wrap; justify-content: center">
                <div class="flex-grow-0">
                    <small class="d-block text-secondary my-1">(Offer ID: 42)</small>
                    <div class="d-block rounded mx-auto" style="width: 230px; height: 180px; background-color: red"></div>
                </div>
                <div class="flex-grow-1 ml-2 d-flex flex-column">
                    <div class="flex-grow-0">
                        <p class="m-0 p-1 text-center" style="font-size: 18px">[Placeholder offer title]</p>
                        <hr class="my-1" />
                    </div> 
                    <div class="flex-grow-1">
                        <div class="d-flex flex-row pl-2 mb-2 align-items-center">
                            <span class="mr-3" style="font-size: 18px; font-weight: 600">Reservation status:</span>
                            <span class="text-success" style="font-size: 18px; font-weight: 600">Pending</span>
                        </div>
                        <div class="d-flex flex-row pl-3 align-items-center">
                            <i class="flex-grow-0 far fa-calendar-minus mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Reservation period:</span><span class="mx-3">22.12.2020 &mdash; 14.02.2021</span></p>
                        </div>
                        <div class="d-flex flex-row pl-3 align-items-center">
                            <i class="flex-grow-0 fas fa-user-tie mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Number of adults:</span><span class="mx-3">2</span></p>
                        </div>
                        <div class="d-flex flex-row pl-3 mb-3 align-items-center">
                            <i class="flex-grow-0 fas fa-child mx-2"></i>
                            <p class="flex-grow-1 m-0"><span style="color: gray">Number of children:</span><span class="mx-3">1</span></p>
                        </div>
                        <hr class="my-2"/>
                        <div class="d-flex flex-row flex-wrap pl-2" style="align-items: center">
                            <span class="flex-grow-0 mr-4" style="font-size: 18px; font-weight: 600">Your reservation review:</span>
                            <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#reviewModal">Create<i class="far fa-comment-dots ml-2"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </li>

    </ul>

    <ul class="pagination justify-content-center mx-auto w-100 my-3">
        <li class="page-item ml-auto">
            <button class="page-link" href="" aria-label="Previous">
                <i class="fas fa-chevron-left text-dark"></i>
            </button>
        </li>
        <li class="page-item">
            <input class="page-link text-dark text-center font-weight-bold p-2" style="width: 60px" type="number" min="1" value="1" />
        </li>
        <li class="page-item">
            <button class="page-link" href="" aria-label="Next">
                <i class="fas fa-chevron-right text-dark"></i>
            </button>
        </li>
    </ul>
</div>

<div class="modal fade" id="reviewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Your review</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-row w-100">
                    <label for="review-rating" class="col-form-label flex-grow-0">Rating:</label>
                    <input type="number" class="form-control flex-grow-1 ml-3" id="review-rating">
                </div>
                <hr class="mt-3 mb-0" />
                <div class="form-group">
                    <label for="review-content" class="col-form-label">Review content:</label>
                    <textarea class="form-control" id="review-content" style="min-height: 150px"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning">Create review/Edit review</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
    $(document).ready(function () {
        function GetReservations(pageNumber, pageSize) {
            $.ajax({
                method: "GET",
                url: `@ServerApiConfig.BaseUrl/api/client/reservations?pageNumber=${pageNumber}&pageSize=${pageSize}`,
                headers: {
                    "@ServerApiConfig.TokenHeaderName": getCookie("@ClientTokenCookieDefaults.AuthCookieName")
                },
                success: (data, textStatus, jqXHR) => {

                },
                error: (jqXHR, textStatus, errorThrown) => {
                    if (textStatus === "timeout") {
                        ShowServerErrorBox("Operation timed out");
                        return;
                    }

                }
            });
        }

        function CreateReservationEntry(reservationData) {
            return 
            `<li class="list-group-item rounded-0 m-1 mb-3 bg-light reservation-list-entry" data-hotelID="${reservationData.hotelInfoPreview.hotelID}" data-reservationID="${reservationData.reservationInfo.reservationID}">
                <div>
                    <p class="m-0"><span style="font-size: 22px"><b>Hotel:</b><i class="mx-3">${reservationData.hotelInfoPreview.hotelName}</i></span><small>(Poland, Warsaw)</small></p>
                </div>
                <hr class="my-1 border-secondary" />
                <small class="d-block text-secondary my-1">(Offer ID: 42)</small>
                <div class="d-flex flex-row" style="flex-wrap: wrap; justify-content: center">
                    <div class="flex-grow-0">
                        <div class="d-block rounded mx-auto" style="width: 230px; height: 180px; background-color: red"></div>
                    </div>
                    <div class="flex-grow-1 ml-2 d-flex flex-column">
                        <div class="flex-grow-0">
                            <p class="m-0 p-1 text-center" style="font-size: 18px">[Placeholder offer title]</p>
                            <hr class="my-1" style="border-top: 1px dashed gray" />
                        </div>
                        <div class="flex-grow-1 container-fluid">
                            <div class="row h-100">
                                <div class="col-md-3 d-flex">
                                    <div class="w-100 my-auto" style="min-width: 75px">
                                        <button class="d-block btn btn-success my-2 w-100" data-toggle="modal" data-target="#reviewModal">Create review</button>
                                    </div>
                                </div>
                                <div class="col-md-9 py-1 my-auto">
                                    <div class="d-flex flex-row" style="align-items: center">
                                        <i class="flex-grow-0 far fa-calendar-minus mx-2"></i>
                                        <p class="flex-grow-1 m-0"><span style="color: gray">Reservation period:</span><span class="mx-3">22.12.2020 &mdash; 14.02.2021</span></p>
                                    </div>
                                    <div class="d-flex flex-row" style="align-items: center">
                                        <i class="flex-grow-0 fas fa-user-tie mx-2"></i>
                                        <p class="flex-grow-1 m-0"><span style="color: gray">Number of adults:</span><span class="mx-3">2</span></p>
                                    </div>
                                    <div class="d-flex flex-row" style="align-items: center">
                                        <i class="flex-grow-0 fas fa-child mx-2"></i>
                                        <p class="flex-grow-1 m-0"><span style="color: gray">Number of children:</span><span class="mx-3">1</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>`;
        }
    });
    </script>
}