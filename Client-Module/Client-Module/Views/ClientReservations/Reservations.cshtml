@{
    ViewData["Title"] = "Reservations";
}

<div class="text-center">
    <h1 class="display-4">Your reservations</h1>
</div>
<hr class="mt-1 mb-3" />
<div class="d-flex flex-row mt-1">
    <div class="flex-grow-0 mx-auto form-inline">
        @*flex-wrap: nowrap set in order to not wrap divs inside input-group*@
        <div class="input-group" style="flex-wrap: nowrap">
            <div class="input-group-prepend">
                <button class="d-flex flex-row btn btn-outline-secondary bg-light text-secondary" type="button" style="width: 115px; align-items: center">
                    <i class="fas fa-caret-left mx-1 flex-grow-0"></i>
                    <span class="flex-grow-0 mx-auto">Previous</span>
                </button>
            </div>
            <input type="text" class="form-control py-0 px-2 border-secondary border-right-0 border-left-0" style="width: 50px; text-align: center" />
            <div class="input-group-append">
                <button class="d-flex flex-row btn btn-outline-secondary bg-light text-secondary" type="button" style="width: 115px; align-items: center">
                    <span class="flex-grow-0 mx-auto">Next</span>
                    <i class="fas fa-caret-right mx-1 flex-grow-0"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<hr class="my-3" />
<div class="card w-100 border-0 mt-3" style="background-color: lightgray">
    <ul class="list-group bg-website reservation-list">
        @*<li> element responsible for listing an offer with all reservations*@
        <li class="list-group-item rounded-0 m-1 mb-3 bg-light reservation-list-entry">
            <div>
                <p class="m-0"><span style="font-size: 22px"><b>Hotel:</b><i class="mx-3">Example hotel name</i></span><small>(Poland, Warsaw)</small></p>
            </div>
            <hr class="my-1 border-secondary" />

            <small class="d-block text-secondary my-1">(Offer ID: 42)</small>
            @*justify-content: center to horizontally center flex items after they're wrapped*@
            <div class="d-flex flex-row" style="flex-wrap: wrap; justify-content: center">
                <div class="flex-grow-0">
                    <div class="d-block rounded mx-auto" style="width: 230px; height: 180px; background-color: red"></div>
                </div>
                <div class="flex-grow-1 ml-2 d-flex flex-column">
                    <div class="flex-grow-0">
                        <p class="m-0 p-1 text-center" style="font-size: 18px">[Placeholder offer title]</p>
                        <hr class="my-1" style="border-top: 1px dashed gray" />
                    </div>
                    <div class="flex-grow-1 container-fluid">
                        @*Without h-100 my-auto doesn't work - weird behaviour as height: 100% shouldn't even do anything (unless it overrides default row height and only that)*@
                        <div class="row h-100">
                            <div class="col-md-3 d-flex">
                                @*<div> responsible for displaying buttons responsible for creating/deleting or editing a review*@
                                <div class="w-100 my-auto" style="min-width: 75px">
                                    <button class="d-block btn btn-warning my-2 w-100" data-toggle="modal" data-target="#reviewModal">Edit review</button>
                                    <button class="d-block btn btn-danger my-2 w-100">Delete review</button>
                                </div>
                            </div>
                            <div class="col-md-9 py-1 my-auto">
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 far fa-calendar-minus mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Reservation period:</span><span class="mx-3">22.12.2020 &mdash; 14.02.2021</span></p>
                                </div>
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 fas fa-user-tie mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Number of adults:</span><span class="mx-3">2</span></p>
                                </div>
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 fas fa-child mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Number of children:</span><span class="mx-3">1</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>





        <li class="list-group-item rounded-0 m-1 mb-3 bg-light reservation-list-entry">
            <div>
                <p class="m-0"><span style="font-size: 22px"><b>Hotel:</b><i class="mx-3">Example hotel name</i></span><small>(Poland, Warsaw)</small></p>
            </div>
            <hr class="my-1 border-secondary" />

            <small class="d-block text-secondary my-1">(Offer ID: 42)</small>
            <div class="d-flex flex-row" style="flex-wrap: wrap; justify-content: center">
                <div class="flex-grow-0">
                    <div class="d-block rounded mx-auto" style="width: 230px; height: 180px; background-color: red"></div>
                </div>
                <div class="flex-grow-1 ml-2 d-flex flex-column">
                    <div class="flex-grow-0">
                        <p class="m-0 p-1 text-center" style="font-size: 18px">[Placeholder offer title]</p>
                        <hr class="my-1" style="border-top: 1px dashed gray" />
                    </div>
                    <div class="flex-grow-1 container-fluid">
                        <div class="row h-100">
                            <div class="col-md-3 d-flex">
                                @*<div> responsible for displaying buttons responsible for creating/deleting or editing a review*@
                                <div class="w-100 my-auto" style="min-width: 75px">
                                    <button class="d-block btn btn-success my-2 w-100" data-toggle="modal" data-target="#reviewModal">Create review</button>
                                </div>
                            </div>
                            <div class="col-md-9 py-1 my-auto">
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 far fa-calendar-minus mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Reservation period:</span><span class="mx-3">22.12.2020 &mdash; 14.02.2021</span></p>
                                </div>
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 fas fa-user-tie mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Number of adults:</span><span class="mx-3">2</span></p>
                                </div>
                                <div class="d-flex flex-row" style="align-items: center">
                                    <i class="flex-grow-0 fas fa-child mx-2"></i>
                                    <p class="flex-grow-1 m-0"><span style="color: gray">Number of children:</span><span class="mx-3">1</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>

    </ul>
</div>

<div class="modal fade" id="reviewModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Your review</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-row w-100">
                    <label for="review-rating" class="col-form-label flex-grow-0">Rating:</label>
                    <input type="number" class="form-control flex-grow-1 ml-3" id="review-rating">
                </div>
                <hr class="mt-3 mb-0" />
                <div class="form-group">
                    <label for="review-content" class="col-form-label">Review content:</label>
                    <textarea class="form-control" id="review-content" style="min-height: 150px"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning">Create review/Edit review</button>
            </div>
        </div>
    </div>
</div>
